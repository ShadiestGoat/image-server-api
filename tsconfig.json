{
    "compilerOptions": {
        "allowJs": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "ES6",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "checkJs": true,
        "module": "CommonJS",
        "lib": ["ESNext"],
        "strict": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"]
}